                <td>
                    <a href="{{ path('admin_prod_show', {'id': product.id}) }}">Details</a>
                    <a href="{{ path('admin_prod_edit', {'id': product.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
