        <div class="container-fluid text-center py-5">
            <h2 class="font_color">Cr√©ez vos identifiants</h2>
        </div>

        {{ form_start(form) }}
        <div class="d-flex flex-wrap py-3">
            <div class="col-lg-6 col-sm-12 px-5">
